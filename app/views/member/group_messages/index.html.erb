<div class="container">
  <div class="container__links">
    <div class="links">
      <h4 class="links__title"><i class="fas fa-caret-right"></i>お知らせ一覧</h4>
      <%= link_to(member_member_path(current_member.id), class: "links__item") do %>
        <span><i class="fas fa-home"></i>マイページ</span>
      <% end %>
    </div>
  </div>
  <div class="messageList">
    <table class="messageList__table">
      <thead class="messageList__head">
        <tr>
          <th width="5%"></th>
          <th width="5%"></th>
          <th width="40%">件名</th>
          <th width="20%">登録日時</th>
          <th width="20%">最終更新日時</th>
        </tr>
      </thead>
      <tbody class="messageList__body">
      <% @group_messages.each do |message| %>
        <tr class="messageList__item">
          <td class="messageList__text--center">
            <% if message.checked_by?(current_member) %>
              <%= "" %>
            <% else %>
              <i class="fas fa-dot-circle" style="color: red;"></i>
            <% end %>
          </td>
          <td class="messageList__text--center">
            <% if message.files.attached? %>
              <i class="fas fa-paperclip" style="color: red;"></i>
            <% else %>
              <%= "" %>
            <% end %>
          </td>
          <td class="messageList__text">
            <% if message.checked_by?(current_member) %>
              <%= link_to message.title, member_group_message_path(message.id) %>
            <% else %>
              <%= link_to(message.title, member_group_message_path(message.id), class: "messageList__link--red") %>
            <% end %>
          </td>
          <td class="messageList__date"><span class="messageList__date--1"><%= l message.created_at, format: :long %></span><span class="messageList__date--2"><%= l message.created_at, format: :default %></span></td>
          <td class="messageList__date"><span class="messageList__date--1"><%= l message.updated_at, format: :long %></span><span class="messageList__date--2"><%= l message.updated_at, format: :default %></span></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="container__links--btm">
    <div class="links">
      <%= link_to(member_member_path(current_member.id), class: "links__item") do %>
        <span><i class="fas fa-home"></i>マイページ</span>
      <% end %>
    </div>
  </div>
</div>