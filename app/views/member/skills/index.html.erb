<div class="container">
  <div class="container__links">
    <div class="links">
      <h4 class="links__title"><i class="fas fa-caret-right"></i><%= @group.shop_name %>スキル一覧</h4>

      <%= link_to(member_member_path(current_member.id), class: "links__item") do %>
        <span><i class="fas fa-home"></i>マイページ</span>
      <% end %>
    </div>
  </div>
  <div class="skillList container__element--center">
    <table class="skillList__table">
      <thead class="skillList__head">
        <tr>
          <th width="10%">種別</th>
          <th width="30%">スキル名称</th>
          <th width="10%">ランク</th>
          <th width="20%">登録日時</th>
          <th width="20%">最終更新日時</th>
        </tr>
      </thead>
      <tbody class="skillList__body">
        <% @skills.each do |skill| %>
        <tr class="skillList__item">
          <td class="skillList__text--center"><%= skill.work_type.work_type %></td>
          <td class="skillList__text"><%= link_to skill.name, member_skill_path(skill.id) %></td>
          <td class="skillList__text--center"><%= skill.rank_i18n %></td>
          <td class="skillList__date"><span class="skillList__date--1"><%= l skill.created_at, format: :long %></span><span class="skillList__date--2"><%= l skill.created_at, format: :default %></span></td>
          <td class="skillList__date"><span class="skillList__date--1"><%= l skill.updated_at, format: :long %></span><span class="skillList__date--2"><%= l skill.updated_at, format: :default %></span></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="container__links--btm">
    <div class="links">
      <%= link_to(member_member_path(current_member.id), class: "links__item") do %>
        <span><i class="fas fa-home"></i>マイページ</span>
      <% end %>
    </div>
  </div>
</div>