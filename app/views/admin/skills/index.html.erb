<div class="container">
  <div class="container__links">
    <div class="links">
      <h4 class="links__title"><i class="fas fa-caret-right"></i><%= @group.shop_name %>スキル一覧</h4>
      <%= link_to(admin_group_path(@group.id, group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-caret-left"></i>店舗に戻る</span>
      <% end %>
    </div>
  </div>
  <%= link_to(new_admin_skill_path(group_id: @group.id), class: "addMember") do %>
    <span><i class="fas fa-plus"></i>スキル追加</span>
  <% end %>
  <div class="skillList">
    <table class="skillList__table">
      <thead class="skillList__head">
        <tr>
          <th width="10%">業務種別</th>
          <th width="30%">スキル名称</th>
          <th width="10%">ランク</th>
          <th width="10%">公開／非公開</th>
          <th width="20%">登録日時</th>
          <th width="20%">最終更新日時</th>
        </tr>
      </thead>
      <tbody class="skillList__body">
        <% @skills.each do |skill| %>
        <tr class="skillList__item">
          <td class="skillList__text--center"><%= skill.work_type.work_type %></td>
          <td class="skillList__text"><%= link_to skill.name, admin_skill_path(skill.id, group_id: @group.id) %></td>
          <td class="skillList__text--center"><%= skill.rank_i18n %></td>
          <td class="skillList__text--center">
            <% if skill.is_active %>
              <p>公開</p>
            <% else %>
              <p>非公開</p>
            <% end %>
          </td>
          <td><%= l skill.created_at, format: :long %></td>
          <td><%= l skill.updated_at, format: :long %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="container__links">
    <div class="links">
      <%= link_to(admin_group_path(@group.id, group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-caret-left"></i>店舗に戻る</span>
      <% end %>
    </div>
  </div>
</div>