<div class="container">
  <h2><%= @member.last_name + @member.first_name %>さん登録情報編集</h2>

  <%= form_with model: @member, url: admin_member_path(@member.id), method: :patch, local: true do |f| %>

    <div class="container__member member">
      <div class="member__form field">
        <div class="member__form--left">
          <%= f.file_field :image %><br>
          <h5>今月の目標</h5>
          <div class="field__objective">
            <%= f.text_area :objective, placeholder: "目標を入力" %>
          </div>
        </div>
        <div class="member__form--right">
          <h5>店舗</h5>
          <div class="field__group">
            <%= f.collection_select :group_id, Group.all, :id, :shop_name, {prompt: "選択してください"} %>
          </div>
          <h5>氏名</h5>
          <div class="field__name">
            <%= f.text_field :last_name, class: "field__name-box", placeholder: "姓" %>
            <%= f.text_field :first_name, class: "field__name-box", placeholder: "名" %>
          </div>
          <h5>フリガナ</h5>
          <div class="field__name">
            <%= f.text_field :last_name_kana, class: "field__name-box", placeholder: "セイ" %>
            <%= f.text_field :first_name_kana, class: "field__name-box", placeholder: "メイ" %>
          </div>
          <h5>生年月日</h5>
          <div class="field__birthday">
            <%= raw sprintf(f.date_select(:birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), date_separator: "%s"), "年", "月") + "日"  %>
          </div>
          <div class="field__address">
            <h5>住所</h5>
            〒<%= f.text_field :postal_code, placeholder: "0000000" %><br>
            <%= f.text_field :address, placeholder: "住所" %>
          </div>
          <div class="field__email">
            <h5>メールアドレス</h5>
            <%= f.email_field :email, placeholder: "email@example.com" %>
          </div>
          <div class="field__telephone">
            <h5>電話番号</h5>
            <%= f.text_field :telephone_number, placeholder: "00012345678" %>
          </div>
          <div class="field__active">
            <h5>在籍ステータス</h5>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "在籍", {value: :true, style: "display: inline-clock;" } %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退社", {value: :false, style: "display: inline-clock;" } %>
          </div>
          <div class="field__submit">
            <%= f.submit "更新" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

