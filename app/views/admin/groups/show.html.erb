<div class="container">
  <div class="container__links">
    <div class="links">
      <h4 class="links__title"><i class="fas fa-caret-right"></i><%= @group.shop_name %>メンバー一覧</h4>
      <%= link_to(admin_groups_path, class: "links__item") do %>
        <span><i class="fas fa-caret-left"></i>店舗一覧に戻る</span>
      <% end %>
      <%= link_to(admin_manuals_path(group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-book"></i>マニュアル</span>
      <% end %>
      <%= link_to(admin_skills_path(group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-chart-line"></i>スキル</span>
      <% end %>
      <%= link_to(admin_group_messages_path(group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-newspaper"></i>お知らせ</span>
      <% end %>
    </div>
  </div>
  <%= link_to(new_member_registration_path(group_id: @group.id), class: "addMember") do %>
    <span><i class="fas fa-plus"></i>メンバー追加</span>
  <% end %>


  <div class="members">
    <% @members.each do |member| %>
    <div class="members__list memberList">
      <div class="memberList__image"><%= image_tag member.get_image(100, 100) %></div>
      <h4><%= link_to (member.last_name + member.first_name), admin_member_path(member.id, group_id: @group.id), data: {"turbolinks" => false}, class: "memberList__name" %></h4>
    </div>
    <% end %>
  </div>
</div>