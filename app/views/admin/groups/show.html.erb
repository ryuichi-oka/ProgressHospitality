<div class="container">
  <h1 class="container__title"><%= @group.shop_name %>メンバー一覧</h1>
  <button class="">メンバーを追加</button>
    <div class="modal js-modal">
      <div class="modal__bg js-modal-close"></div>
      <div class="modal__content">
        <h4>メンバー新規登録</h4>
        <%= form_with model: @member, url: new_member_registration_path, local: true do |f| %>
        <div class="modal__form--img"><%= f.file_field :shop_image, accept: "image/*", class: "modal__form--img" %></div>
        <div class="modal__form--txt"><%= f.text_field :shop_name, class: "modal__form--txt" %></div>
        <div><%= f.submit "登録", class: "modal__form--sub" %></div>
        <% end %>
        <div class="js-modal-close" align="right">
          <button class="close-btn"><span>✕</span>閉じる</button>
        </div>
      </div>
    </div>

</div>
