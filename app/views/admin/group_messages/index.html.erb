<div class="container">
  <h2>お知らせ一覧</h2>
  <div class="container__links">
    <div class="links">
      <%= link_to "店舗に戻る", admin_group_path(@group.id), class: "links__item" %>
      <%= link_to "新規作成", new_admin_group_message_path(group_id: @group.id), class: "links__item" %>
    </div>
  </div>
  <div class="messageList container__element--center">
    <table class="messageList__table">
      <thead class="messageList__head">
        <tr>
          <th width="30%">件名</th>
          <th width="10%">添付ファイル</th>
          <th width="20%">登録日時</th>
          <th width="20%">最終更新日時</th>
        </tr>
      </thead>
      <tbody class="messageList__body">
      <% @group_messages.each do |message| %>
        <tr class="messageList__item">
          <td class="messageList__text"><%= link_to message.title, admin_group_message_path(message.id) %></td>
          <td class="messageList__text--center">
            <% if message.files.attached? %>
              <p>〇</p>
            <% else %>
              <p></p>
            <% end %>
          </td>
          <td><%= l message.created_at, format: :long %></td>
          <td><%= l message.updated_at, format: :long %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>