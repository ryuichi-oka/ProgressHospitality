<div class="container">
  <div class="container__links">
    <div class="links">
      <h4 class="links__title"><i class="fas fa-caret-right"></i><%= @group.shop_name %>マニュアル一覧</h4>
      <%= link_to(admin_group_path(@group.id, group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-caret-left"></i>店舗に戻る</span>
      <% end %>
    </div>
  </div>
  <%= link_to(new_admin_manual_path(group_id: @group.id), class: "addMember") do %>
    <span><i class="fas fa-plus"></i>マニュアル追加</span>
  <% end %>
  <div class="manualList">
    <table class="manualList__table">
      <thead class="manualList__head">
        <tr>
          <th width="5%"></th>
          <th width="10%">業務種別</th>
          <th width="35%">マニュアル名</th>
          <th width="10%">公開／非公開</th>
          <th width="20%">登録日時</th>
          <th width="20%">最終更新日時</th>
        </tr>
      </thead>
      <tbody class="manualList__body">
      <% @manuals.each do |manual| %>
        <tr class="manualList__item">
          <td class="manualList__text--center">
            <% if manual.files.attached? %>
              <i class="fas fa-paperclip" style="color: red;"></i>
            <% else %>
              <p></p>
            <% end %>
          </td>
          <td class="manualList__text--center"><%= manual.work_type.work_type %></td>
          <td class="manualList__text"><%= link_to manual.name, admin_manual_path(manual.id, group_id: @group.id) %></td>
          <td class="manualList__text--center">
            <% if manual.is_active %>
              <p>公開</p>
            <% else %>
              <p>非公開</p>
            <% end %>
          </td>
          <td><%= l manual.created_at, format: :long %></td>
          <td><%= l manual.updated_at, format: :long %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="container__links">
    <div class="links">
      <%= link_to(admin_group_path(@group.id, group_id: @group.id), class: "links__item") do %>
        <span><i class="fas fa-caret-left"></i>店舗に戻る</span>
      <% end %>
    </div>
  </div>
</div>
